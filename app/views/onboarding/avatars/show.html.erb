<div class="container">
  <div class="onboarding-heading text-center">
    <h1 class="onboarding-title">Upload Avatar</h1>
    <p class="onboarding-description">
      Hello, handsome!
    </p>
  </div>

  <%#= Avatar form %>
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">

      <%= simple_form_for(@user, url: onboarding_avatar_path(@user)) do |f| %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit "Upload and proceed to bio", class: "btn btn-primary btn-block gradient"  %>
      <% end %>
      <%= link_to "back to personal info", onboarding_infos_path, class: "onboarding-link" %>
    </div>
  </div>
</div>
