<div class="skills_show_page">
  <h2 class="skills-title">Your skills</h2>
  <p>
    <%#= @user.description %>
    <%#= @user.achievement %>
    <%#= @user.first_name %>
    <%#= @user.last_name %>
    <%#= @user.location %>
    <%#= @user.photo %>

  </p>
  <p>
    <%= link_to "Correct your bio?", onboarding_bios_path  %>
  </p>

  <%= simple_form_for(@user, url: onboarding_skill_path(@user)) do |f| %>
      <%= f.input :skill_list,
                  label: false,
                  input_html: {
                    value: f.object.skill_list.join(", "),
                    placeholder: "Enter your skills",
                    data: {
                      list: Skill.pluck(:title).join(","),
                      multiple: ""
                    }
                  }
      %>
      <%= f.submit "Proceed to goals" %>
  <% end %>
</div>
